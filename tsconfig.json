{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "target": "ES2019", // Alterado de "ES2020" para "ES2019"
    "useDefineForClassFields": true,
    "lib": ["ES2019", "DOM", "DOM.Iterable"], // Alterado de "ES2020" para "ES2019"
    "module": "ES2020", // Alterado de "ESNext" para "ES2020"
    "skipLibCheck": false, // Alterado de "true" para "false"

    /* Bundler mode */
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
